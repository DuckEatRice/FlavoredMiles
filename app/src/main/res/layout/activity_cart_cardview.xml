<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CartAdapter">

    <androidx.cardview.widget.CardView
        android:id="@+id/cart_item"
        android:layout_width="343dp"
        android:layout_height="99dp"
        android:layout_marginBottom="20dp"
        android:translationY="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartMealImage"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/image_background"
                android:clipToOutline="true"
                android:src="@drawable/imagenotfound"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/redCross"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="316dp"
                android:background="@drawable/image_background"
                android:clipToOutline="true"
                android:src="@drawable/redcross"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:layout_marginBottom="64dp"
                android:fontFamily="@font/inria_serif_light"
                android:gravity="bottom|clip_horizontal|center|clip_vertical|start|right|center_horizontal|fill|fill_horizontal|top|left|center_vertical|fill_vertical|end"
                android:text="FoodName"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cartItemPrice"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/inria_serif_light"
                android:gravity="bottom|clip_horizontal|center|clip_vertical|start|right|center_horizontal|fill|fill_horizontal|top|left|center_vertical|fill_vertical|end"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/cartQuantityAdd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.582"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/quantityadd" />

            <TextView
                android:id="@+id/cartItemQuantity"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginStart="160dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/inria_serif_light"
                android:gravity="center"
                android:text="0"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/cartQuantitySubtract"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.433"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/quantitysubtract" />

            <TextView
                android:id="@+id/cartItemRealPrice"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/inria_serif_light"
                android:gravity="center"
                android:text="$0.00"
                android:textColor="#F85568"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>